<div class="container d-flex">
<h2>Simple Airbnb</h2>
<p><%= link_to "Add Flat", new_flat_path, class: "btn btn-primary" %></p>
</div>
<h1>All our Flats (<%= @flats.length %>)</h1>
<div class="container d-flex">
 <% @flats.each do |flat|%>
  <label class="form-control">
    <h2><%= flat.name %></h2>
    <p><%= flat.address %></p>
    <div class="container d-flex">
      <i class="fa-solid fa-user-group"></i>
      <p><%= flat.number_of_guests %></p>
      <i class="fa-solid fa-euro-sign"></i>
      <p><%= flat.price_per_night %></p>
    </div>
    <div class="container d-flex">
      <div class="blue-text"><%= link_to "More info", flat_path(flat) %></div>
      <div class="yellow-text"><%= link_to "Edit", edit_flat_path(flat) %></div>
      <div class="red-text"><%= link_to "Remove",flat_path(flat),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></div>
    </div>
  </label>
<% end %>
</div>
